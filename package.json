{
  "name": "gwen-coder",
  "version": "1.0.0-beta.3",
  "description": "Declarative type-safe data decoding, encoding and run-time assertions for JS",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint --format stylish --project tsconfig.json || exit 1",
    "prebuild": "npm run clean && npm run lint",
    "build": "tsc --project tsconfig.json",
    "test": "nyc --all ts-mocha -p tsconfig.json test/index.ts src/*.spec.ts src/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aravindanve/gwen-coder.git"
  },
  "keywords": [
    "json",
    "declarative",
    "validator",
    "runtime",
    "type-checking",
    "type-guard",
    "codable"
  ],
  "author": "Aravindan Ve <aravindan.ve@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aravindanve/gwen-coder/issues"
  },
  "homepage": "https://github.com/aravindanve/gwen-coder#readme",
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/expect": "^1.20.4",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "dtslint": "^0.9.0",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.3",
    "ts-mocha": "^6.0.0",
    "tslint": "^5.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {},
  "engines": {
    "node": ">=10.16.0"
  }
}
